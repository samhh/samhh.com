	"compilerOptions": {
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "esnext",
		"strict": true,
		"skipLibCheck": true,
		"lib": ["esnext", "dom"],
		"jsx": "react",
		"baseUrl": "./src/",
		"paths": {
			"~/*": [
				"./*"
			]
		}
	}
}

