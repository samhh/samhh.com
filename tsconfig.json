{
	"compilerOptions": {
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"target": "esnext",
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["esnext", "dom"],
		"jsx": "react",
		"baseUrl": "./src/",
		"paths": {
			"Components/*": [
				"./components/*"
			],
			"Modules/*": [
				"./modules/*"
			]
		}
	}
}

